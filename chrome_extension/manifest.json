{
  "name": "Public-Key-Web-Login",
  "version": "0.13",
  "manifest_version": 2,
  "author": "Mirko Oleszuk <mirko@oleszuk.de>",
  "description": "A password-free login with Public-Key-Cryptography.",

  "icons": { 
    "16": "icons/key-16.png",
    "48": "icons/key-48.png",
    "128": "icons/key-128.png" 
  },

  "browser_action": {
    "default_icon": "icons/key-48.png",
    "default_popup": "html/popup.html"
  },

  "permissions": [ "tabs", "http://*/*", "https://*/*", "activeTab", "cookies", "*://*/*" ]
}
